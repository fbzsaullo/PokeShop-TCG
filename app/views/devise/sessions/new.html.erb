<div class="vertical-align-container">
  <div class="auth-container d-flex justify-content-between">
    <div class="auth-form p-5">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-end">
          <%= f.button :submit, "Log in", class: "btn-hover login" %>
        </div>
      <% end %>
      <div class="gap-1 mt-2 d-flex justify-content-end" style="font-size: 14px; color:#6c757d">
        <span>Already have an account?</span><%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="auth-splash">
    </div>
  </div>
</div>
