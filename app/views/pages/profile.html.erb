<div class=" my-4 container d-flex justify-content-center justify-content-sm-end ">
  <%= link_to "Edit profile",edit_user_registration_path , class: "btn btn-buy mt-3" %>
</div>


<div class="main-container">
  <h4 class="my-3 d-flex justify-content-center justify-content-sm-start">My orders</h4>
  <div class="cards mb-5">

    <% @orders.each do |order| %>

        <% if order.user == current_user %>

          <%= link_to card_path(order.card), class: "card-link" do %>

            <div class="card-trip">
              <img src="<%= order.card.image %>" />
              <div class="card-trip-infos">
                <div>
                  <p><%= order.card.user.username %></p>
                  <h2><%= order.card.name %></h2>
                </div>
                <h2 class="card-trip-pricing">$ <%= order.card.price %> </h2>
              </div>
            </div>

          <% end %>

        <% end %>

    <% end %>

  </div>
</div>

<div class="main-container">
  <h4 class="my-3 d-flex justify-content-center justify-content-sm-start">My offers</h4>
  <div class="cards mb-5">

    <% @cards.each do |card| %>
      <% if card.user == current_user %>
        <%= link_to card_path(card), class: "card-link" do %>
          <div class="card-trip">
            <img src="<%= card.image %>" />
            <div class="card-trip-infos">
              <div>
                <p><%= card.user.username %></p>
                <h2><%= card.name %></h2>
              </div>
              <h2 class="card-trip-pricing">$ <%= card.price %> </h2>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
